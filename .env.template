# ===========================================================
# SOLIDIFY BACKEND - ENVIRONMENT VARIABLES TEMPLATE
# ===========================================================
# Copy this file to .env and update the values for your environment
# For production deployment on Render, set these in your service settings

# ===========================================================
# SERVER CONFIGURATION
# ===========================================================
NODE_ENV=production
PORT=5000
API_VERSION=v1

# ===========================================================
# DATABASE CONFIGURATION
# ===========================================================
# MongoDB connection string (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/solidify?retryWrites=true&w=majority

# ===========================================================
# JWT CONFIGURATION
# ===========================================================
# Generate secure secrets for production: https://www.uuidgenerator.net/
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================================
# CLOUDINARY CONFIGURATION (for file uploads)
# ===========================================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================================
# EMAIL CONFIGURATION
# ===========================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Solidify <noreply@solidify.com>

# ===========================================================
# FRONTEND & CORS CONFIGURATION
# ===========================================================
# Your frontend URL
FRONTEND_URL=https://solidify-fe.onrender.com

# Comma-separated list of allowed origins for CORS
# IMPORTANT: Include your frontend domain here to fix CORS errors
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://solidify.onrender.com,https://solidify-fe.onrender.com

# ===========================================================
# RATE LIMITING
# ===========================================================
# 15 minutes in milliseconds
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================================
# FILE UPLOAD CONFIGURATION
# ===========================================================
# 5MB in bytes
MAX_FILE_SIZE=5242880
# Comma-separated MIME types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ===========================================================
# SECURITY CONFIGURATION
# ===========================================================
# Number of salt rounds for bcrypt (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=12

# ===========================================================
# SOCKET.IO CONFIGURATION
# ===========================================================
# Comma-separated origins for Socket.io CORS
SOCKET_CORS_ORIGIN=http://localhost:3000,https://solidify-fe.onrender.com

# ===========================================================
# RENDER.COM SPECIFIC SETTINGS
# ===========================================================
# These are automatically set by Render, but you can override if needed
# RENDER=true
# RENDER_INSTANCE_ID=automatically-set-by-render
# RENDER_SERVICE_ID=automatically-set-by-render